TabButton1.TextColor3 = Color3.fromRGB(255, 255, 255)
TabButton1.TextScaled = true

-- 2. Sekme Butonu (TabButton2) Özellikleri
TabButton2.Parent = TabFrame
TabButton2.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
TabButton2.Size = UDim2.new(0.5, 0, 0, 30)
TabButton2.Position = UDim2.new(0.5, 0, 0, 0)
TabButton2.Font = Enum.Font.SourceSans
TabButton2.Text = "Credits"
TabButton2.TextColor3 = Color3.fromRGB(255, 255, 255)
TabButton2.TextScaled = true

-- Scripts Frame Özellikleri (1. Sekme İçeriği)
ScriptsFrame.Parent = MainFrame
ScriptsFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ScriptsFrame.Size = UDim2.new(1, 0, 1, -30)
ScriptsFrame.Position = UDim2.new(0, 0, 0, 30)


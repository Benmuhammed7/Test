-- GUI Elemanlarını Oluşturma
local ScreenGui = Instance.new("ScreenGui")
local OpenCloseButton = Instance.new("TextButton")
local MainFrame = Instance.new("Frame")
local TabFrame = Instance.new("Frame")
local TabButton1 = Instance.new("TextButton")
local TabButton2 = Instance.new("TextButton")
local ScriptsFrame = Instance.new("Frame")
local Mm2ScriptButton = Instance.new("TextButton")
local AnimationScriptButton = Instance.new("TextButton")
local ShiftlockScriptButton = Instance.new("TextButton")
local SystemBrokenButton = Instance.new("TextButton")
local HighlightMM2Button = Instance.new("TextButton")
local CreditsFrame = Instance.new("Frame")
local CreditsLabel = Instance.new("TextLabel")

-- GUI'yi Oyuncunun PlayerGui'sine Ekleme
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "CustomExecutorGui"

-- Aç/Kapat Butonu Özellikleri
OpenCloseButton.Parent = ScreenGui
OpenCloseButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
OpenCloseButton.Size = UDim2.new(0, 100, 0, 50)
OpenCloseButton.Position = UDim2.new(0, 10, 0, 70)  -- Konum biraz aşağıya alındı
OpenCloseButton.Font = Enum.Font.SourceSans
OpenCloseButton.Text = "Aç"
OpenCloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
OpenCloseButton.TextScaled = true

-- Ana Çerçeve (MainFrame) Özellikleri
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
MainFrame.Size = UDim2.new(0, 300, 0, 250)
MainFrame.Visible = false  -- Başlangıçta kapalı

-- Sekme Çerçevesi (TabFrame) Özellikleri
TabFrame.Parent = MainFrame
TabFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
TabFrame.Size = UDim2.new(1, 0, 0, 30)

-- 1. Sekme Butonu (TabButton1) Özellikleri
TabButton1.Parent = TabFrame
TabButton1.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
TabButton1.Size = UDim2.new(0.5, 0, 0, 30)
TabButton1.Position = UDim2.new(0, 0, 0, 0)

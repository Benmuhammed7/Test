HighlightMM2Button.Parent = ScriptsFrame
HighlightMM2Button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Yeşil renk
HighlightMM2Button.Size = UDim2.new(0.5, -5, 0, 50)
HighlightMM2Button.Position = UDim2.new(0, 5, 0.75, -25)  -- Alt tarafa eklenir

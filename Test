-- Credits Frame Özellikleri
CreditsFrame.Parent = MainFrame
CreditsFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
CreditsFrame.Size = UDim2.new(1, 0, 1, -30)
CreditsFrame.Position = UDim2.new(0, 0, 0, 30)
CreditsFrame.Visible = false

-- Credits Label Özellikleri
CreditsLabel.Parent = CreditsFrame
CreditsLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
CreditsLabel.Size = UDim2.new(1, 0, 1, 0)
CreditsLabel.Font = Enum.Font.SourceSans
CreditsLabel.Text = "Credits: \nWreston JR - GUI Creator"
CreditsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
CreditsLabel.TextScaled = true
CreditsLabel.TextWrapped = true

-- Aç/Kapat Butonunun İşlevselliği
OpenCloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible  -- Ana Çerçeveyi aç/kapa
    if MainFrame.Visible then
        OpenCloseButton.Text = "Kapat"
    else
        OpenCloseButton.Text = "Aç"
    end
end)

-- Sekme Butonlarının İşlevselliği
TabButton1.MouseButton1Click:Connect(function()
    ScriptsFrame.Visible = true
    CreditsFrame.Visible = false
end)

TabButton2.MouseButton1Click:Connect(function()
    ScriptsFrame.Visible = false
    CreditsFrame.Visible = true
end)

-- Mm2 Script Butonunun İşlevselliği
Mm2ScriptButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://overdrive-h.ohd.workers.dev/?d=loader"))()
end)

-- Animation Script Butonunun İşlevselliği
AnimationScriptButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Gazer-Ha/Animated/main/G"))()
end)

-- Shiftlock Script Butonunun İşlevselliği
ShiftlockScriptButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-Mobile-Shiftlock-12348"))()
end)

-- SystemBroken Script Butonunun İşlevselliği
SystemBrokenButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/H20CalibreYT/SystemBroken/main/script"))()
end)

-- HighlightMM2 Script Butonunun İşlevselliği
HighlightMM2Button.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ThatSick/HighlightMM2/main/Main"))()
end)